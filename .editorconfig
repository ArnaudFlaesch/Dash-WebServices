root = true

[*]
charset = utf-8
indent_style = space

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*.kt]
indent_size = 4
max_line_length = 160

ktlint_standard_no-wildcard-imports = disabled
ij_kotlin_allow_trailing_comma_on_call_site = false
ij_kotlin_allow_trailing_comma = false

[*.{yaml,yml}]
indent_size = 2